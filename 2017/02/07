    <script>
    // Previous / Next links
    (function() {
      const dateMeta = document.querySelector('meta[name="page-date"]');
      if (!dateMeta) return;
      
      const dateStr = dateMeta.content; // "YYYY-MM-DD"
      const [y, m, d] = dateStr.split('-').map(Number);
      const currentDate = new Date(y, m - 1, d);

      const prevDate = new Date(currentDate);
      prevDate.setDate(prevDate.getDate() - 1);

      const nextDate = new Date(currentDate);
      nextDate.setDate(nextDate.getDate() + 1);

      function formatURL(dt) {
        const yyyy = dt.getFullYear();
        const mm = String(dt.getMonth() + 1).padStart(2, '0');
        const dd = String(dt.getDate()).padStart(2, '0');
        return `/${yyyy}/${mm}/${dd}`;
      }

      document.getElementById('prev-link').href = formatURL(prevDate);
      document.getElementById('next-link').href = formatURL(nextDate);
    })();

    // Calendar picker with button functionality
    const datePicker = document.getElementById('datePicker');
    const goToDateBtn = document.getElementById('goToDateBtn');

    // Enable/disable button when date changes
    datePicker.addEventListener('change', function() {
        goToDateBtn.disabled = !this.value;
    });

    // Handle button click to navigate to the selected date
    goToDateBtn.addEventListener('click', function() {
        const selectedDate = datePicker.value;
        if (!selectedDate) return;
        
        const [year, month, day] = selectedDate.split('-');
        window.location.href = `/${year}/${month}/${day}`;
    });
    </script>

